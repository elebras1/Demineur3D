script/source = "extends Node3D

@export var lifetime: float = 4.0
@export var auto_start: bool = true
@export var camera_shake_enabled: bool = true

func _ready():
	if auto_start:
		explode()

func explode():
	# Démarrer toutes les particules
	$ParticlesCore.emitting = true
	$ParticlesDebris.emitting = true
	$ParticlesSmoke.emitting = true
	
	# Flash lumineux initial
	$OmniLight3D.light_energy = 10.0
	
	# Animation de la lumière
	var tween = create_tween()
	tween.tween_property($OmniLight3D, \"light_energy\", 0.0, lifetime)
	
	# Onde de choc
	create_shockwave()
	
	# Destruction automatique
	await get_tree().create_timer(lifetime + 1.0).timeout
	queue_free()

func create_shockwave():
	# Création visuelle de l'onde de choc
	var shockwave_tween = create_tween().set_parallel(true)
	$Shockwave.scale = Vector3.ONE * 0.1
	$Shockwave.visible = true
	
	shockwave_tween.tween_property($Shockwave, \"scale\", Vector3.ONE * 15.0, 1.5)
	shockwave_tween.tween_property($Shockwave, \"transparency\", 1.0, 1.5)
	
	await shockwave_tween.finished
	$Shockwave.visible = false
"

